<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_content"
    tools:context="org.eecs499.russtrup.ketchup.SearchActivity">

    <LinearLayout
        android:id="@+id/toolbarWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Application toolbar-->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>

    <EditText
        android:id="@+id/search_searchbar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:hint="Search..."
        android:textColor="#565656"
        android:textColorHint="#787878"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbarWrapper"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/search_searchbar"
        android:layout_toEndOf="@+id/search_searchbar" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/searchResultsList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Result fragments here -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
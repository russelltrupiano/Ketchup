<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchResultItem"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="#454545">

    <TextView
        android:id="@+id/showTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/showThumbnail"
        android:inputType="textNoSuggestions"
        android:text="Better Call Saul"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/showTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/showTitle"
        android:layout_below="@+id/showTitle"
        android:layout_marginTop="6dp"
        android:text="Monday @ 10:00 PM"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/showNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/showTime"
        android:layout_below="@+id/showTime"
        android:layout_marginTop="0dp"
        android:text="AMC"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/addShowBtn"
        android:layout_width="48dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#00676767"
        android:contentDescription="Add Show"
        android:scaleType="centerInside"
        android:src="@drawable/ic_plus"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/removeShowBtn"
        android:layout_width="48dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#00676767"
        android:contentDescription="Remove Show"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_remove"
        android:visibility="gone" />

</RelativeLayout>